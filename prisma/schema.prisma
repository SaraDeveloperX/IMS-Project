datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  CAPTAIN
  OPERATOR
}


model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
}

// prisma/schema.prisma
model Alert {
  id        String   @id @default(cuid())
  title     String
  text      String
  level     String   // HIGH | MEDIUM | LOW
  createdAt DateTime @default(now())
}